[colors]
background = ${xrdb:color0}
background-alt = #444
foreground = ${xrdb:color12}
foreground-alt = #555
primary = ${xrdb:color12}
secondary = ${xrdb:color12}
alert = ${xrdb:color1}

[bar/bar_prim]
monitor = ${env:MONITOR}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = true
bottom = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

;font-0 = unifont:fontformat=truetype:size=12:antialias=false;0
font-0 = Noto Sans Mono:size=10;1
font-1 = JoyPixels:pixelsize=16:style=Regular:scale=10;2
;font-2 = Font Awesome 5 Free Regular:pixelsize=10;
;font-0 = Noto Sans Mono:size=10;1
;font-1 = "Noto Color Emoji:pixelsize=16:style=Regular:scale=10;2"
;font-3 = Font Awesome 5 Free Regular:size=10;4

modules-left = bspwm xwindow
modules-center = date
modules-right = backlight-acpi pulseaudio filesystem memory cpu-usage battery temperature wlan eth

tray-position = right
tray-padding = 2
;tray-background = #0063ff


;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev


cursor-click = pointer
cursor-scroll = ns-resize

